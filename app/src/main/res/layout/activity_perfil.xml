<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.perfil.PerfilActivity">

    <!-- Informações do usuário -->
    <TextView
        android:id="@+id/tvNomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nome_do_usu_rio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título da seção de estatísticas -->
    <TextView
        android:id="@+id/tvEstatisticasTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatísticas:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNomeUsuario"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Nível -->
    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maior Nível já alcançado numa partida: 0"
        app:layout_constraintTop_toBottomOf="@id/tvEstatisticasTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Pontos -->
    <TextView
        android:id="@+id/tvPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontos: 0"
        app:layout_constraintTop_toBottomOf="@id/tvNivel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Conquistas -->
    <TextView
        android:id="@+id/tvConquistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conquistas: 0"
        app:layout_constraintTop_toBottomOf="@id/tvPontos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Total de Vitórias -->
    <TextView
        android:id="@+id/tvVitorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de Vitórias: 0"
        app:layout_constraintTop_toBottomOf="@id/tvConquistas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Total de Derrotas -->
    <TextView
        android:id="@+id/tvDerrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de Derrotas: 0"
        app:layout_constraintTop_toBottomOf="@id/tvVitorias"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Melhor Recorde Pessoal -->
    <TextView
        android:id="@+id/tvRecordePessoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melhor Recorde: 0"
        app:layout_constraintTop_toBottomOf="@id/tvDerrotas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Percentual de Vitórias -->
    <TextView
        android:id="@+id/tvPercentualVitorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aproveitamento: 0%"
        app:layout_constraintTop_toBottomOf="@id/tvRecordePessoal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botão para editar perfil -->
    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/editar_perfil"
        app:layout_constraintTop_toBottomOf="@id/tvPercentualVitorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
